{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true
  },
  "exclude": [
    "__fixtures__",
    "__mocks__",
    "__tests__",
    ".github",
    ".next",
    "actions",
    "dist",
    "node_modules",
    "out",
    "eslint.config.mjs",
    "jest.config.ts",
    "postcss.config.mjs",
    "rollup.config.ts"
  ],
  "include": [
    "src",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ]
}
