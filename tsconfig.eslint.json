{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true
  },
  "exclude": [".next", "dist", "node_modules"],
  "include": [
    "__fixtures__",
    "__mocks__",
    "__tests__",
    ".github",
    "action",
    "schema/validate.js",
    "src",
    "eslint.config.mjs",
    "jest.config.ts",
    "next.config.ts",
    "postcss.config.mjs",
    "rollup.config.ts"
  ]
}
